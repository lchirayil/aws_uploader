
<div class="container">

  <div class="jumbotron login-jumbo">
      <h2 class="login-header">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, class: 'form-control input_field', placeholder: 'Email', autofocus: true %>
      </div>


      <div class="field">
        <%= f.password_field :password, class: 'form-control input_field', placeholder: 'Password', autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: 'btn btn-sm btn-info' %>
      </div>
    <% end %>
  </div>
</div>
