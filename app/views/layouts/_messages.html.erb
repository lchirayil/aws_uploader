<% flash.each do |type, msg| %>
  <% if type == "notice" %>
    <div class="alert alert-success">
  <% elsif type == "alert" %>
    <div class="alert alert-danger">
  <% else %>
    <div class="alert alert-<%= type %>">
  <% end %>
    <p class="alert-message">
      <%= msg %>
    </p>
  </div>
<% end %>
