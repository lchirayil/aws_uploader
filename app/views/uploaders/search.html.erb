<div class="header">
  <h2>Bucket Contents</h2>
</div>

<br>

<div class="container">

  <div class="back">
    <%= link_to "Back to home page", "/" %>
  </div>

  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col">Image</th>
        <th scope="col">File</th>
        <th scopt="col">Last Modified</th>
        <th scopt="col">Copy to Clipboard</th>
      </tr>
    </thead>
    <tbody>
      <% @bucket_search.each do |object| %>
        <tr>
          <th scope="row"><img src="<%= object.url %>" target="_blank" onerror="imgError(this);"></th>
          <% array = object.key.split('/') %>
            <td><a href="<%= object.url %>" target="_blank"><%= array[3] %></a></td>
            <td><%= local_time(object.last_moddy) %></td>
            <td><input type="image" src="/clipboard.svg" class="clipboard-btn" data-clipboard-action="copy" data-clipboard-text="<%= object.url %>"/></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
